<%= link_to 'post comments', '#', class: 'js-comment' %>	
		<%= form_for [Comment.new(post_id: post_id)] do |f| %>
		<%= f.hidden_field :post_id %>
	<div class="field">
		<%= f.text_field :content, placeholder: "enter comment", class: "span7"%>
		<%= f.submit "submit", class: "btn-large btn-success" %>
		</div>
		<% end %>
		<br/>