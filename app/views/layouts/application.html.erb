<!DOCTYPE html>
<html>
<head>
  <title>Virtual Piano Music Library</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        	<%= link_to "Virtual Piano", root_path, id: "logo" %>
	        <div class="nav-collapse">
	          <ul class="nav">
							<li><%= link_to 'New song', new_post_path %></li>
	          </ul>
	        </div>
	      </div>
	    </div>
	  </div>
	
			<div class="container">
				<div class="user_nav">
					<% if current_user %>
						<% picture = current_user.facebook.get_picture("me") %>
							<div class="image_right">
								<%= image_tag picture %>
							</div>
							<div align="right">
								Signed in as<br/> 
								<b><%= current_user.name%></b>
								<br/>
									<%= link_to "Sign out", signout_path, id: "sign_out"%>
								<% else %>
								<div align="right">
									<b><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></b>
									</div>
								<% end %>
							</div>
						<br/>
					
			<% flash.each do |name, msg| %>
					 <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
						 <a class="close" data-dismiss="alert">&#215;</a>
						   <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
						</div>
	      <% end %>
				<%= yield %>
					<br/>
					<%= render 'layouts/footer' %>
					</div>
				</div>
			</body>
		<footer>
	</footer>
</html>
