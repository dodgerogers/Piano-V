
	<% if !signed_in %><br/>
			<p>please sign in to post a new song</p><br/>
	<% else %>
		<%= form_for(@post) do |f| %>
			<fieldset>
  			<% if @post.errors.any? %>
    	<div id="error_explanation">
      	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      	<% @post.errors.full_messages.each do |msg| %>
        	<li><%= msg %></li>
      		<% end %>
      	</ul>
    	</div>
  	<% end %>

  <div class="control-group">
		<div class="controls">
    <%= f.text_field :song_name, placeholder: "please enter a song title...", class: "span12"%>
 		<br/><br/>
    <%= f.text_area :song, placeholder: "enter music score...", class: "span12"  %>
		</div>
	</div>
	<div class="form-actions">
    <%= f.submit "post song", class: "btn btn-success" %>
  		</div>
		</fieldset>
		<% end %>
	<% end %>
	

